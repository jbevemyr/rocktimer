# RockTimer Configuration

# Device ID (for sensors: tee, hog_close, hog_far)
device_id: "tee"

# GPIO
gpio:
  sensor_pin: 17
  debounce_ms: 50

# Server address (for sensors)
server:
  host: "192.168.50.1"
  port: 5000          # UDP port
  http_port: 8080     # Web UI (Pi 4 only)
  udp_port: 5000      # Same as port (Pi 4 only)
  enable_speech: true # Enable speech announcements
  alsa_device: "hw:0,0" # Optional: audio output device (Pi 4 analog jack is usually hw:0,0)
