#
# RockTimer configuration (example)
#
# device_id:
# - tee       (Pi Zero @ tee/back line)
# - hog_close (Pi 4 @ near hog)
# - hog_far   (Pi Zero @ far hog)
device_id: "tee"

gpio:
  # LM393 digital output pin (default wiring uses GPIO17 / physical pin 11)
  sensor_pin: 17
  # Debounce in ms (increase if you get double triggers)
  debounce_ms: 50
  # Pi 4 only: IR arm sensor pin (GPIO27 / physical pin 13)
  # arm_pin: 27

server:
  # Pi 4 IP/hostname (default if using setup_network.sh AP)
  host: "192.168.50.1"
  # UDP triggers (sensors -> server)
  port: 5000
  # Web UI (Pi 4 only)
  http_port: 8080
  # Server listen UDP (Pi 4 only; should match port)
  udp_port: 5000

  # Speech (Pi 4 only)
  enable_speech: true
  # ALSA output (optional).
  # Prefer named devices (stable across reboots): "default:CARD=Headphones"
  # You can list devices with: aplay -L
  alsa_device: "default:CARD=Headphones"
  # Start ARMED at boot (Pi 4 only)
  auto_arm_on_start: true
  speech:
    speak_ready: true
    speak_tee_hog: true
    speak_hog_hog: true

  # Debug: log TTS spawns (optional)
  # tts_debug_log: "/var/log/rocktimer-tts-spawn.log"

# Optional/advanced (currently not used by the code, kept for future):
# max_history: 100
# ws_ping_interval: 30
# sensor_timeout_ms: 100
